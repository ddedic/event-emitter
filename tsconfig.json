{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "paths": {
      "@posva/event-emitter": [
        "./src/index.ts"
      ]
    },
    "strict": true,
    "noEmit": true,
    // TSUP issue https://github.com/egoist/tsup/issues/571
    // "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
  ]
}
